
@{
    ViewData["Title"] = "ListAllLoans";
}

<style>
body{
            background-color: #FF4CBA;
            /* For browsers that do not support gradients */
            background-image: linear-gradient(#6190E8, #A7BFE8);
        }
</style>

<h1 class="text-center" style="font-weight:800; color:white; text-shadow: 0 0 5px 
black; margin-top: 10px; margin-bottom:10px;">Details of DVD currently on loan</h1>
<table class="table">
    <thead>
        <tr style="color:white; background-color:#7FB5FF; height: 50px; text-align:center">
            <th>Copy Number</th>
            <th>Membership FirstName</th>
            <th>Date Due</th>
            <th>Date Returned</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.loanDetails)
        {
            <tr style="text-align:center">
                <td style="width:160px">@item.loan.CopyNumber </td>
                <td style="width:200px">@item.member.MembershipFirstName </td>
                <td style="width:160px">@item.loan.DateDue </td>
                <td style="width:160px; color:red">Not Returned </td>
                <td>
                    <ul class="list-inline m-0">
                        <li class="list-inline-item">
                            <a href="@Url.Action("EditDVDCopyDetails","Assistant",new { item.loan.CopyNumber} )" class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="top" title="Update">Update Loan Records</a>
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

