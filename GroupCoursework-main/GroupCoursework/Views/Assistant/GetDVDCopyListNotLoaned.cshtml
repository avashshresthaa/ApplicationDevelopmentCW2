@{
    ViewData["Title"] = "GetDVDCopyListNotLoaned";
}

<style>
    body{
            background-color: #FF4CBA;
            /* For browsers that do not support gradients */
            background-image: linear-gradient(#636FA4, #E8CBC0);
}
</style>
<body>
    <div class="container">
        <h1 class="text-center" style="font-weight:800; color:white; text-shadow: 0 0 5px 
black; margin-top: 15px; margin-bottom:25px;">List of all DVD copies currently on loan with total loans</h1>
        <div class="card" style="opacity:80%;">
            <table class="table">
                <thead>
                    <tr>

                        <th>DVDTitleName</th>
                        <th>CopyNumber</th>
                        <th>MembershipFirstName</th>
                        <th>DateOut</th>
                        <th>TotalLoans</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.totalloans)
                    {
                        <tr>
                            <td>@item.DvdTitle </td>
                            <td>@item.CopyNumber </td>
                            <td>@item.MembershipFirstName </td>
                            <td>@item.DateOut </td>
                            <td>@item.TotalLoans </td>
                            <td>
                                @*   <ul class="list-inline m-0">
                                    <li class="list-inline-item">
                                    <a href="@Url.Action("DeleteCopy","Assistant",new { item.dvdCopy.CopyNumber} )" class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="top" title="Delete">Delete</a>
                                    </li>
                                    </ul>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>


