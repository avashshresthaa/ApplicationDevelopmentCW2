@model GroupCoursework.Models.Actor

@{
    ViewData["Title"] = "Create";
}
<style>
body{
            background-color: #FF4CBA;
            /* For browsers that do not support gradients */
            background-image: linear-gradient(#43C6AC, #191654);  
}
.btn{
    margin-left: -13px;
}

label{
    font-size: 20px;
}
</style>

<div class="bg-image">
  <div class="container mt-5 mb-5">
    <div class="card" style="opacity: 85%;">
      <div class="card-header">
        <h1>Register Admin</h1>
      </div>
      <div class="card-body">
    <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="ActorFirstName" class="control-label"></label>
                <input asp-for="ActorFirstName" class="form-control" />
                <span asp-validation-for="ActorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ActorSurname" class="control-label"></label>
                <input asp-for="ActorSurname" class="form-control" />
                <span asp-validation-for="ActorSurname" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
      </div>
    </div>
  </div>
  <div>
    @*<a class="btn btn-success"asp-action="Index">Back to List</a>*@
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
